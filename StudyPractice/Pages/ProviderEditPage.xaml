<Page x:Class="StudyPractice.Pages.ProviderEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProviderEditPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Name"></TextBlock>
            <TextBox Text="{Binding Name}"></TextBox>
            
           
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom">
            <Button x:Name="Save" Content="Save" Click="Save_Click" ></Button>
            <Button x:Name="Cancel" Content="Cancel" Click="Cancel_Click" ></Button>
        </StackPanel>
       
    </Grid>
</Page>
